@{
    ViewData["Title"] = "Home Page";
}

<form asp-controller="Home" asp-action="Index">
    <div class="col-lg-12">Enter QR code String</div>
    <br/>
    <div class="col-lg-12">
        <input type="text" name="QRCodeString" id="QRCodeString" class="form-control"/>
    </div>
    <br/>
    <br/>
    <div class="col-lg-12">
        <input type="submit" value="Generate QR Code" class="btn btn-primary"/>
    </div>
    <br/>
    <br/>
</form>

@if (!string.IsNullOrEmpty(ViewBag.BarcodeUrl))
{
    <div class="col-lg-12">
        <img src="@ViewBag.BarcodeUrl" />
    </div>
}
@if (!string.IsNullOrEmpty(ViewBag.QRCodeUrl))
{
    <div class="col-lg-12">
        <img src="@ViewBag.QRCodeUrl" />
    </div>
}

<div class="col-lg-12">
    <form asp-controller="Home" asp-action="ReadQRCode" method="post" enctype="multipart/form-data">
        <input type="file" name="QRCodeImage" id="QRCodeImage" class="form-contro col-lg-6 bg-secondary" />

        <br />
        <br />
        <div class="col-lg-6">
            <input type="submit" value="Read QR/Bar code" class="btn btn-primary" />
        </div>
    </form>

    <a href="/Home/ReadQRCode"> Read Image and show text </a>
</div>


@if (!string.IsNullOrEmpty(ViewBag.BarcodeText))
{
    <div class="col-lg-12">
        After Reading barcode Code we get the value -> @ViewBag.BarcodeText
    </div>
}

<a href="/IronBarCode" class="col-lg-12 btn btn-primary"> Iron barCode </a>
@if (!string.IsNullOrEmpty(ViewBag.QRCodeText))
{
    <div class="col-lg-12">
        After Reading QR Code we get the value -> @ViewBag.QRCodeText
    </div>
}